<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Pizza Menu üçï</h1>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    </head>
    <body>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/js/app.js"></script>
    </body>
</html>


<div class="text-center mb-4">
  <button class="btn btn-outline-dark me-2" id="toggleMode">Toggle Dark Mode</button>
  <div class="btn-group" role="group" aria-label="Filter">
    <button type="button" class="btn btn-outline-primary filter-btn" data-filter="all">All</button>
    <button type="button" class="btn btn-outline-success filter-btn" data-filter="veg">Veg</button>
    <button type="button" class="btn btn-outline-danger filter-btn" data-filter="nonveg">Non-Veg</button>
  </div>
</div>

  <div class="row">
    <% pizzas.forEach(pizza => { %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <%= pizza.name %> <span><%= pizza.emoji %></span>
            </h5>
            <p class="card-text"><%= pizza.desc %></p>
            <p><strong>$<%= pizza.price.toFixed(2) %></strong></p>
            <form action="/add-to-cart" method="POST">
              <input type="hidden" name="name" value="<%= pizza.name %>">
              <button class="btn btn-success btn-sm">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <hr class="my-4" />

  <h3>üõí Your Cart</h3>
  <% if (Object.keys(cart).length === 0) { %>
    <p>No items yet.</p>
  <% } else { %>
    <ul class="list-group mb-3">
      <% let total = 0; %>
      <% for (let name in cart) {
           let item = cart[name];
           let itemTotal = item.qty * item.price;
           total += itemTotal;
      %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= item.name %></strong> ($<%= item.price.toFixed(2) %>) x <%= item.qty %> = <strong>$<%= itemTotal.toFixed(2) %></strong>
          </div>
          <div>
            <form action="/update-cart" method="POST" class="d-inline">
              <input type="hidden" name="name" value="<%= item.name %>">
              <input type="hidden" name="action" value="dec">
              <button class="btn btn-sm btn-outline-secondary">‚àí</button>
            </form>
            <form action="/update-cart" method="POST" class="d-inline">
              <input type="hidden" name="name" value="<%= item.name %>">
              <input type="hidden" name="action" value="inc">
              <button class="btn btn-sm btn-outline-secondary">+</button>
            </form>
            <form action="/remove-item" method="POST" class="d-inline">
              <input type="hidden" name="name" value="<%= item.name %>">
              <button class="btn btn-sm btn-danger">üóë</button>
            </form>
          </div>
        </li>
      <% } %>
    </ul>
    <h4>Total: $<%= total.toFixed(2) %></h4>
  <% } %>
</div>
